{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
  },
  "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [],
}
